cabal-version:      >=1.8
build-type:         Simple

library
    build-depends:      base   >= 4.3 && < 5, ghc-prim
    hs-source-dirs:     src
    exposed-modules:    Internal.Vectorized
    c-sources:          src/Internal/C/vector-aux.c
    cc-options:         -O4

executable hmatrix-segfault
    main-is:            Main.hs
    build-depends:      base, hmatrix-segfault, vector
    hs-source-dirs:     exe
    ghc-options:        -Wall
